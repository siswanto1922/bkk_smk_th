<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activity.CheckApplicantActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendaftar"
            android:layout_margin="10dp"
            android:fontFamily="@font/soraextrabold"
            android:textSize="40sp"
            android:textColor="#000"/>

        <androidx.appcompat.widget.SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_gold"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_applicant"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        tools:listitem="@layout/item_applicant" />

</RelativeLayout>