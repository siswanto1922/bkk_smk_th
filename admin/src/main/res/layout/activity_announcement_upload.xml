<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AnnouncementUpload"
    android:orientation="vertical"
    android:padding="16dp">
    <!--header-->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Pengumuman"
            android:fontFamily="@font/soraextrabold"
            android:textSize="40dp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:textColor="#000"/>
    </RelativeLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:focusableInTouchMode="true"
        android:layout_marginTop="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_upload_announcement"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:textAlignment="textStart"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_upload_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Kirim"
        android:textColor="#FFF"
        android:fontFamily="@font/quicksandbold"
        android:drawableTint="#FFF"
        android:drawableStart="@drawable/ic_send_black_24dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:drawablePadding="10dp"
        android:background="@drawable/rounded_gold"/>

</LinearLayout>