<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:id="@+id/item_loker">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#DFD5BC"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="150dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvLokerIndustry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:text="PT. Mencari Cinta Sejati"
                android:textColor="#000"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingEnd="5dp"
                android:background="@drawable/rounded_blue">
                <TextView
                    android:id="@+id/tvLokerDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="#fff"
                    android:fontFamily="@font/quicksandbold"
                    android:text="13-10-2020"
                    android:textColor="#fff" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvLokerDescription"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_below="@id/tvLokerIndustry"
                android:text="@string/lorem" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pictLoker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="20dp">
        <ImageView
            android:id="@+id/bannerLoker"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="#BDBDBD" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>