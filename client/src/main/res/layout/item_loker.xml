<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/CardView.Light"
    android:layout_marginBottom="10dp"
    android:id="@+id/item_loker"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_pictLoker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:id="@+id/bannerLoker"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="#BDBDBD"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/tvLokerIndustry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:text="PT. Mencari Cinta Sejati"
                android:textColor="#000"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/tvLokerDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13-10-2020"
                android:fontFamily="@font/quicksandbold"
                android:textColor="#000"
                android:drawableStart="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/tvLokerDescription"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tvLokerIndustry"
                android:text="@string/lorem"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>