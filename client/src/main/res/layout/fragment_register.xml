<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.RegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="20dp">
        <ImageView
            android:id="@+id/path1"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/ic_path_1"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/path2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mobile_login_rafiki"
            android:layout_alignTop="@id/path1"
            android:layout_alignEnd="@id/path1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Langkah awal\nmenuju masa\ndepan."
            android:fontFamily="@font/soraextrabold"
            android:textSize="25sp"
            android:layout_alignBottom="@id/path1"
            android:layout_marginBottom="25dp"
            android:textColor="#FFF"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/path1"
            app:cardCornerRadius="10dp">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:fontFamily="@font/quicksandbold"
                        android:layout_centerHorizontal="true"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:layout_below="@+id/title"
                        android:focusableInTouchMode="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="16dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="16dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="E-Mail"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="16dp"
                        app:passwordToggleEnabled="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:inputType="textPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nisn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pass"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="16dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_nisn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="NISN"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--    JK    -->
                    <RadioGroup
                        android:id="@+id/jk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nisn">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis Kelamin"
                            android:textColor="#000"
                            android:fontFamily="@font/quicksandbold"/>
                        <RadioButton
                            android:id="@+id/rb_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Laki-laki"
                            android:fontFamily="@font/quicksandbold"/>
                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perempuan"
                            android:fontFamily="@font/quicksandbold"/>
                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ttl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/jk"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="16dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_ttl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tempat, tanggal lahir"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ttl"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="16dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Alamat"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/jurusan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/address"
                        android:focusable="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="16dp"
                        android:focusableInTouchMode="true">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_jurusan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Jurusan"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--   Thn lulus     -->
                    <TextView
                        android:id="@+id/label_graduate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tahun Kelulusan"
                        android:textColor="#000"
                        android:layout_below="@id/jurusan"
                        android:fontFamily="@font/quicksandbold"/>
                    <Spinner
                        android:id="@+id/spin_graduate"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/label_graduate"/>
                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/spin_graduate"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/rounded_gold"
                        android:text="SIGN UP"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                </RelativeLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>